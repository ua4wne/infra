server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://{{ loki_host }}:3100/loki/api/v1/push

scrape_configs:
# system logs
- job_name: system
  static_configs:
  - labels:
      job: systemlogs
      host: {{ inventory_hostname }}
      __path__: /var/log/*log
  - labels:
      job: srvlogs
      host: {{ inventory_hostname }}
      __path__: /srv/*/*/*log
